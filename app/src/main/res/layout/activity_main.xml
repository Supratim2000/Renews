<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/renewsTb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantata_one"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/twitter_hex"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/catagoryTl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        app:tabIndicatorColor="@color/twitter_hex"
        app:tabIndicatorHeight="2.5dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/twitter_hex"
        app:tabTextColor="@color/twitter_hex">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/homeTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/businessTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/entertainmentTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entertainment" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/generalTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/healthTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/scienceTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="science" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/technologyTl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technology" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/newsPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>